mainmenu "LCD console sample"

menu "LCD console sample configuration"

config LCD_CONSOLE_MIRROR
	bool "Mirror UART shell activity to LCD"
	default y
	depends on LVGL && SHELL
	help
	  Mirror serial shell input/output and LOG messages onto the LVGL based
	  LCD console widget used in this sample.

config LCD_CONSOLE_LOG_BUFFER_SIZE
	int "LCD log backend buffer size"
	default 256
	depends on LCD_CONSOLE_MIRROR && LOG
	help
	  Temporary buffer size, in bytes, used by the LCD log backend when
	  formatting log messages.

endmenu

source "Kconfig.zephyr"
